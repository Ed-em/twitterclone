<h1>twitter</h1>
<p><%= notice %></p>
<table>
  <tr>
    <th>tweets</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.tweet %></td>
    <td><%= link_to 'Show tweet', blog_path(blog.id)%></td>
    <td><%= link_to "Edit tweet", edit_blog_path(blog.id), data:{confirm: "are you sure you want to edit this tweet?"} %></td>
    <td><%= link_to 'Delete tweet', blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' }  %></td>
  </tr>
<% end %>
</table>
<%= link_to 'tweet', new_blog_path %>
