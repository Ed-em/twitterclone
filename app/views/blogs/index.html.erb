<p><%= notice %></p>
<div class="wrapper">
<table class="center">
  <tr class="tweet_title">
    <th>tweets</th>
  </tr>
<% @blogs.each do |blog| %>
    <tr class="small_table">
      <td id="tweet">
        <p class="tweet"><%= blog.tweet %></p>
      </td>
      <td id="buttons">
        <%= link_to(blog_path(blog.id), class: "level-item") do %>
          <span class="fa fa-fw fa-twitter" aria-hidden="true"></span>
        <% end %>
        <%= link_to(edit_blog_path(blog.id), class:"level-item", data:{confirm: "are you sure you want to edit this tweet?"}) do %>
          <span class="fa fa-fw fa-edit" aria-hidden="true"></span>
        <% end %>
        <%= link_to(blog_path(blog.id), class:"level-item", method: :delete, data: { confirm: 'Are you sure you want to delete this tweet?' }) do  %>
          <span class="fa fa-fw fa-trash" aria-hidden="true"></span>
        <% end %>
      </td>
    </tr>
<% end %>
</table>
</div>
