<%= form_with(model: @blog, local: true) do |form| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= @blog.errors.count %>There are errors.</h2>
      <ul>
        <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="blog_tweet">
    <%= form.label :tweet %>
    <%= form.text_field :tweet, maxlength: 140, size: 50 %>
  </div>
  <%= form.submit 'post'%>
<% end %>
